<body>
    <div class="container">
        <h1>حساب تسعيرة البيع</h1>
        <div class="input-group">
            <label for="productPrice">ثمن المنتج بالجملة:</label>
            <input type="number" id="productPrice" placeholder="أدخل ثمن المنتج بالجملة">
        </div>
        <div class="input-group">
            <label for="deliveryCost">ثمن التوصيل:</label>
            <input type="number" id="deliveryCost" placeholder="أدخل ثمن التوصيل">
        </div>
        <div class="input-group">
            <label for="adCost">تكلفة الإعلان التجريبي:</label>
            <input type="number" id="adCost" placeholder="أدخل تكلفة الإعلان التجريبي">
        </div>
        <div class="input-group">
            <label for="additionalCosts">مصاريف إضافية:</label>
            <input type="number" id="additionalCosts" placeholder="أدخل المصاريف الإضافية">
        </div>
        <div class="input-group">
            <label for="profitMargin">هامش الربح:</label>
            <input type="number" id="profitMargin" placeholder="أدخل هامش الربح">
        </div>
        <button onclick="calculatePrice()">احسب السعر النهائي</button>
        <div class="result" id="finalPrice">السعر النهائي: </div>
    </div>

    <script>
        function calculatePrice() {
            const productPrice = parseFloat(document.getElementById('productPrice').value) || 0;
            const deliveryCost = parseFloat(document.getElementById('deliveryCost').value) || 0;
            const adCost = parseFloat(document.getElementById('adCost').value) * 3 || 0;
            const additionalCosts = parseFloat(document.getElementById('additionalCosts').value) || 0;
            const profitMargin = parseFloat(document.getElementById('profitMargin').value) || 0;

            const totalCost = productPrice + deliveryCost + adCost + additionalCosts;
            const finalPrice = totalCost + profitMargin;

            document.getElementById('finalPrice').innerText = `السعر النهائي: ${finalPrice.toFixed(2)} درهم مغربي`;
        }
    </script>
</body>
